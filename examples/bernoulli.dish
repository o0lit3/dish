// https://rosettacode.org/wiki/Bernoulli_numbers

bernoulli = :n(
  out: []

  (0..n).each:m(
    out << 1 / (m + 1)

    (m > 0).then(
      (m..1).each:j(
        out.(j - 1) = j * (out.(j - 1) - out.j)
      )
    )
  )

  out.0
)

(0..60).map:n(
  b: n.bernoulli.ratio
  (#~b.0 > max).then(max = #~b.0)
  b
).map:n:i(
  (n.0 != 0).then(
    "B($(i)) = "~(' '*(max - #~n.0))~n.join("/")
  )
).grep:n(n).join("\n")
